<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="text_view_font_12">
        <item name="android:textAppearance">@style/font_text_12_white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_view_font_14">
        <item name="android:textAppearance">@style/font_text_14_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_view_font_16">
        <item name="android:textAppearance">@style/font_text_16_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_view_font_18">
        <item name="android:textAppearance">@style/font_text_18_white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_view_font_20">
        <item name="android:textAppearance">@style/font_text_20_white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="edit_text_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAppearance">@style/font_text_14_grey</item>
        <item name="android:background">?attr/editTextBackground</item>
    </style>

    <style name="toolbar_style" >
        <item name="android:textAppearance">@style/font_text_20_white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/FixedTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TabLayoutStyleScrollable" parent="TabLayoutStyle">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAppearance">@style/font_text_16_white</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FixedTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAppearance">@style/font_text_14_white</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>