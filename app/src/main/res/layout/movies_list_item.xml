<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="188dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/raisin_black"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="@dimen/dimen_4dp"
    android:layout_marginBottom="@dimen/dimen_4dp"
    android:layout_marginRight="8dp"
    android:elevation="@dimen/dimen_4dp"
    app:cardCornerRadius="16dp"
    android:id="@+id/moviesListItemCardview">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:id="@+id/moviesItemImageView" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_below="@+id/moviesItemImageView"
                android:background="@color/red"
                android:layout_toLeftOf="@+id/bookmarkButton">

                <TextView
                    style="@style/font_text_14_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Overview"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:id="@+id/titleTextView"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:id="@+id/movieDateTextView"
                    style="@style/font_text_12_white"
                    android:gravity="left|center"
                    android:text="@string/search"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookmarkButton"
                android:src="@drawable/bookmark_toggle"
                android:background="@color/red"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="16dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>